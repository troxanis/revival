---
import { Image } from "@astrojs/image/components";
import revival from "../assets/revival.jpg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Revival Yachts</title>
  </head>
  <body>
    <main
      class="w-full h-screen after:absolute after:top-0 after:left-0 after:block after:h-full after:w-full after:bg-gradient-to-b after:from-black after:to-black after:opacity-60"
    >
      <Image
        src={revival}
        alt="Under construction"
        fit="cover"
        position={"bottom"}
        width={1280}
        height={720}
        class="w-full h-full object-cover overlay"
        fetchpriority="high"
      />
      <div
        class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-4xl md:text-8xl text-white font-bold z-10 text-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-16 h-16 md:w-32 md:h-32 mx-auto mb-4 text-yellow-500"
          ><path
            d="M2 18a1 1 0 0 0 1 1h18a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v2z"
          ></path><path d="M10 10V5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v5"
          ></path><path d="M4 15v-3a6 6 0 0 1 6-6h0"></path><path
            d="M14 6h0a6 6 0 0 1 6 6v3"></path></svg
        >
        <h1>Under Construction</h1>
      </div>
    </main>
  </body>
</html>
